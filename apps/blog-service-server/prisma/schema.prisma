datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BlogPost {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  content     String?
  author      String?
  publishedAt DateTime?
  title       String?
  comments    Comment[]
}

model Comment {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  author     String?
  content    String?
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id])
  blogPostId String?
}
